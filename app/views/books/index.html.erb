<h1>Library</h1>
<%= link_to "Add Book", new_book_path %>
<table>
  <tr>
    <th> <%=link_to "Name", :sort => 'name'%> </th>
    <th> <%= link_to "Author", :sort => 'author' %> </th>
    <th> <%= link_to "Genre", :sort => 'genre' %></th>
    <th> <%= link_to "Rating", :sort => 'rating' %></th>
  </tr>

<% @books.each do |book| %>
<tr>
  <td><%= book.name %></td>
  <td><%= book.author %></td>
  <td><%= book.genre %></td>
  <td><%= book.rating %></td>
  <td><%= link_to "similar books", similar_book_path(book) %></td>
</tr>
<% end %>
</table>
<%= link_to "Back", books_path %>
